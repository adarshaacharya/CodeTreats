{
  "name": "js-code-runner",
  "version": "1.0.0",
  "description": "In browser code editor for js snippet",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node prod/index.js",
    "server": "nodemon server/index.ts",
    "client": "npm --prefix ./client run start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client:install": "npm --prefix ./client install",
    "server:install": "npm install",
    "server:build": "tsc -p tsconfig.prod.json",
    "client:build": "npm --prefix ./client run build && npm run client:move-build",
    "client:move-build": "ts-node utils/move-from-to.ts client/build prod/client",
    "heroku-postbuild": "npm run server:build && npm run client:install && npm run client:build",
    "format": "prettier --write \"server/**/*.{ts,tsx,js,jsx}\" \"client/**/*.{ts,tsx,js,jsx}\""
  },
  "keywords": [
    "typescript",
    "mern",
    "react",
    "mongo",
    "node",
    "express"
  ],
  "repository": "https://github.com/adarshaacharya/JavaScriptRunner",
  "author": "Aadarsha <connectwithadarsha@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.1",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "monaco-editor": "^0.20.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}